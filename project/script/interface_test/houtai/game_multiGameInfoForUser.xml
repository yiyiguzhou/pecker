<?xml version="1.0" ?>
<suite shelf="game_multiGameInfoForUser">
	<url>
		<url_name>game_multiGameInfoForUser</url_name>
		<url_place>http://production.game.qiyi.domain/api/game/multiGameInfoForUser?</url_place>
		<response_method>GET</response_method>
	</url>
	<testcase id="1" name="获取多个指定游戏信息接口_内网、外网访问该接口">
		<input_parameter>
			<game_ids>7165,10003</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_10003>
					<game_id>10003</game_id>
					<qipu_id>207704720</qipu_id>
					<screenshot_ratio>0</screenshot_ratio>
				</game_id_10003>
				<game_id_7165>
					<game_id>7165</game_id>
					<qipu_id>233132120</qipu_id>
					<screenshot_ratio>1</screenshot_ratio>
				</game_id_7165>
			</data>
		</expect>
	</testcase>
	<testcase id="2" name="获取多个指定游戏信息接口--参数错误（sql注入）">
		<input_parameter>
			<game_ids>3'</game_ids>
		</input_parameter>
		<expect>
			<status>1000</status>
		</expect>
	</testcase>
	<testcase id="3" name="获取多个指定游戏信息接口--所填写的多个game_id中有错误id">
		<input_parameter>
			<game_ids>100121,10003</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_10003>
					<game_id>10003</game_id>
					<qipu_id>207704720</qipu_id>
				</game_id_10003>
			</data>
		</expect>
	</testcase>
	<testcase id="4" name="获取多个指定游戏信息接口--所填写的game_id中有未用“，”隔开">
		<input_parameter>
			<game_ids>1000310012</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
		</expect>
	</testcase>
	<testcase id="5" name="获取多个指定游戏信息接口--所填写的game_id中game_id均不存在">
		<input_parameter>
			<game_ids>30000,40000</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_30000>
					<need_auth>0</need_auth>
				</game_id_30000>
				<game_id_40000>
					<need_auth>0</need_auth>
				</game_id_40000>
			</data>
		</expect>
	</testcase>
	<testcase id="6" name="获取多个指定游戏信息接口--所填写的参数均正确">
		<input_parameter>
			<game_ids>7165,10003</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_10003>
					<game_id>10003</game_id>
					<qipu_id>207704720</qipu_id>
					<screenshot_ratio>0</screenshot_ratio>
				</game_id_10003>
				<game_id_7165>
					<game_id>7165</game_id>
					<qipu_id>233132120</qipu_id>
					<screenshot_ratio>1</screenshot_ratio>
				</game_id_7165>
			</data>
		</expect>
	</testcase>
	<testcase id="7" name="获取多个指定游戏信息接口_多个游戏id之间用非英文逗号分隔">
		<input_parameter>
			<game_ids>10003，10012</game_ids>
		</input_parameter>
		<expect>
			<status>1000</status>
		</expect>
	</testcase>
	<testcase id="8" name="获取多个指定游戏信息接口_传入多个游戏id之间用英文非逗号字符分隔">
		<input_parameter>
			<game_ids>10003$10012</game_ids>
		</input_parameter>
		<expect>
			<status>1000</status>
		</expect>
	</testcase>
	<testcase id="9" name="获取多个指定游戏信息接口_game_ids为空">
		<input_parameter/>
		<expect>
			<status>1000</status>
		</expect>
	</testcase>
	<testcase id="10" name="获取多个指定游戏信息接口_游戏不鉴权">
		<input_parameter>
			<game_ids>11224,11228</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_11224>
					<game_id>11224</game_id>
					<qipu_id>233177520</qipu_id>
					<need_auth>0</need_auth>
				</game_id_11224>
				<game_id_11228>
					<game_id>11228</game_id>
					<qipu_id>233178920</qipu_id>
					<need_auth>0</need_auth>
				</game_id_11228>
			</data>
		</expect>
	</testcase>
	<testcase id="11" name="获取多个指定游戏信息接口_游戏鉴权">
		<input_parameter>
			<game_ids>7165,11222</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_11222>
					<game_id>11222</game_id>
					<qipu_id>233178020</qipu_id>
					<need_auth>1</need_auth>
				</game_id_11222>
				<game_id_7165>
					<game_id>7165</game_id>
					<qipu_id>233132120</qipu_id>
					<need_auth>1</need_auth>
				</game_id_7165>
			</data>
		</expect>
	</testcase>
	<testcase id="12" name="批量查询游戏信息_截图比例">
		<input_parameter>
			<game_ids>7165,10003</game_ids>
		</input_parameter>
		<expect>
			<status>0</status>
			<data>
				<game_id_10003>
					<game_id>10003</game_id>
					<qipu_id>207704720</qipu_id>
					<screenshot_ratio>0</screenshot_ratio>
				</game_id_10003>
				<game_id_7165>
					<game_id>7165</game_id>
					<qipu_id>233132120</qipu_id>
					<screenshot_ratio>1</screenshot_ratio>
				</game_id_7165>
			</data>
		</expect>
	</testcase>
</suite>
