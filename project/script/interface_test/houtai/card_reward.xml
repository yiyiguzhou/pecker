<?xml version="1.0" ?>
<suite shelf="card_reward">
	<url>
		<url_name>card_reward</url_name>
		<url_place>http://apisgame.qiyi.domain/user/card/reward?</url_place>
		<response_method>POST</response_method>
	</url>
	<testcase id="1" name="必填参数source为空">
		<input_parameter>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>6</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="2" name="必填参数sign为空">
		<input_parameter>
			<source>3</source>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>7</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="3" name="必填参数uid为空">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<card_id>70</card_id>
			<unique_id>8</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="4" name="必填参数card_id为空">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<unique_id>9</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="5" name="必填参数unique_id为空">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="6" name="必填参数time为空">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>10</unique_id>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="7" name="只填必填参数">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>14439346</uid>
			<card_id>42</card_id>
			<unique_id>11</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>200</code>
		</expect>
	</testcase>
	<testcase id="8" name="所有参数填写正确">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>16650646</uid>
			<card_id>42</card_id>
			<unique_id>12</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>200</code>
		</expect>
	</testcase>
	<testcase id="9" name="source参数错误（枚举值之外）">
		<input_parameter>
			<source>200</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>13</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="10" name="source参数为非3的数值">
		<input_parameter>
			<source>1</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>14</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10024</code>
		</expect>
	</testcase>
	<testcase id="11" name="sign参数错误">
		<input_parameter>
			<source>3</source>
			<sign>xx</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>15</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10002</code>
		</expect>
	</testcase>
	<testcase id="12" name="时间戳过长">
		<input_parameter>
			<source>3</source>
			<sign>cf61b77a7039a6b28099de25d06a9c45</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>16</unique_id>
			<time>1513652400</time>
		</input_parameter>
		<expect>
			<code>10011</code>
		</expect>
	</testcase>
	<testcase id="13" name="上传source每日发放限额已满">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>70</card_id>
			<unique_id>18</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10012</code>
		</expect>
	</testcase>
	<testcase id="14" name="上传不存在的会员卡id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>100</card_id>
			<unique_id>19</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10023</code>
		</expect>
	</testcase>
	<testcase id="15" name="上传原价不为0的会员卡id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>5</card_id>
			<unique_id>20</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10023</code>
		</expect>
	</testcase>
	<testcase id="16" name="上传已下线的会员卡id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>32</card_id>
			<unique_id>21</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10023</code>
		</expect>
	</testcase>
	<testcase id="17" name="上传不是体验会员的会员卡id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>36</card_id>
			<unique_id>22</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10023</code>
		</expect>
	</testcase>
	<testcase id="18" name="上传不存在的用户id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>3</uid>
			<card_id>70</card_id>
			<unique_id>23</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10021</code>
		</expect>
	</testcase>
	<testcase id="19" name="重复上传unique_id">
		<input_parameter>
			<source>3</source>
			<sign>%{sign}</sign>
			<uid>1466073917</uid>
			<card_id>42</card_id>
			<unique_id>11</unique_id>
			<time>%{timestamp}</time>
		</input_parameter>
		<expect>
			<code>10025</code>
		</expect>
	</testcase>
</suite>
