<?xml version="1.0" ?>
<suite shelf="MGame_gameInfoUser">
	<url>
		<url_name>MGame_gameInfoUser</url_name>
		<url_place>http://10.10.31.1/product/mixed/MGame/gameInfoUser?</url_place>
		<response_method>GET</response_method>
	</url>
	<testcase id="1" name="根据游戏id成功查询-安卓">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>7166</id>
			<sign>8e1deddf538b379aed636ab05a740a47</sign>
		</input_parameter>
		<expect>
			<code>200</code>
			<data>
				<game_id>7166</game_id>
				<qipu_id>233132220</qipu_id>
				<game_name>测试买断</game_name>
				<game_type>2</game_type>
				<network>1</network>
				<terminal>1</terminal>
				<category_id>1</category_id>
			</data>
		</expect>
	</testcase>
	<testcase id="2" name="根据游戏id成功查询-IOS正版">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>266</id>
			<sign>e97cc6cb0562a4dd9b93c6d4e32cba59</sign>
		</input_parameter>
		<expect>
			<code>200</code>
			<data>
				<game_id>266</game_id>
				<qipu_id>200304520</qipu_id>
				<game_name>曹操别跑</game_name>
				<game_type>2</game_type>
				<network>1</network>
				<terminal>3</terminal>
				<category_id>1</category_id>
			</data>
		</expect>
	</testcase>
	<testcase id="3" name="根据游戏id成功查询-WEB">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>348</id>
			<sign>ed927b3a2ddce99e86f6ee7257524339</sign>
		</input_parameter>
		<expect>
			<code>200</code>
			<data>
				<game_id>348</game_id>
				<qipu_id>0</qipu_id>
				<game_name>逍遥仙</game_name>
				<game_type>1</game_type>
				<network>1</network>
				<terminal>4</terminal>
				<category_id>5</category_id>
			</data>
		</expect>
	</testcase>
	<testcase id="4" name="根据游戏id成功查询-H5">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>5671</id>
			<sign>e22d264da06f87fbe8f79e041b168ef6</sign>
		</input_parameter>
		<expect>
			<code>200</code>
			<data>
				<game_id>5671</game_id>
				<qipu_id>211731620</qipu_id>
				<game_name>蒂驻TEST</game_name>
				<game_type>7</game_type>
				<network>1</network>
				<terminal>5</terminal>
				<category_id>4</category_id>
			</data>
		</expect>
	</testcase>
	<testcase id="5" name="根据游戏id成功查询-游戏id不存在">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>98765432</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>50001</code>
		</expect>
	</testcase>
	<testcase id="6" name="根据游戏id成功查询-游戏id非整型">
		<input_parameter>
			<source>1</source>
			<type>game</type>
			<id>hihi</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="7" name="根据奇谱id成功查询">
		<input_parameter>
			<source>1</source>
			<type>qipu</type>
			<id>233132220</id>
			<sign>bbae6abc14293e7a3781a7e051918789</sign>
		</input_parameter>
		<expect>
			<code>200</code>
			<data>
				<game_id>7166</game_id>
				<qipu_id>233132220</qipu_id>
				<game_name>测试买断</game_name>
				<game_type>2</game_type>
				<network>1</network>
				<terminal>1</terminal>
				<category_id>1</category_id>
			</data>
		</expect>
	</testcase>
	<testcase id="8" name="奇谱id不存在">
		<input_parameter>
			<source>1</source>
			<type>qipu</type>
			<id>99887766</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>50002</code>
		</expect>
	</testcase>
	<testcase id="9" name="奇谱id非整型">
		<input_parameter>
			<source>1</source>
			<type>qipu</type>
			<id>oooo</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="10" name="source枚举值之外">
		<input_parameter>
			<source>99</source>
			<type>game</type>
			<id>6724</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="11" name="必传参数source缺失">
		<input_parameter>
			<type>game</type>
			<id>6724</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="12" name="必传参数id缺失">
		<input_parameter>
			<source>2</source>
			<type>game</type>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
