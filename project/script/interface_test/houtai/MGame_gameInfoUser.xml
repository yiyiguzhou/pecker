			<source>3</source>
			<id>6724</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="14" name="type为枚举值之外">
		<input_parameter>
			<source>3</source>
			<type>ccc</type>
			<id>6724</id>
			<sign>%{sign}</sign>
