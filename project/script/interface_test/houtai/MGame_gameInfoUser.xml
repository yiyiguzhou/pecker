	<testcase id="15" name="必传参数sign缺失">
		<input_parameter>
			<source>3</source>
			<type>game</type>
			<id>6724</id>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
	<testcase id="16" name="sign错误">
		<input_parameter>
			<source>3</source>
			<type>game</type>
			<id>6724</id>
			<sign>321</sign>
		</input_parameter>
		<expect>
			<code>10002</code>
		</expect>
	</testcase>
	<testcase id="17" name="sql注入">
		<input_parameter>
			<source>1</source>
			<type>game'</type>
			<id>6724</id>
			<sign>%{sign}</sign>
		</input_parameter>
		<expect>
			<code>10001</code>
		</expect>
	</testcase>
</suite>
